extends layout

block content
    if !error
        div(class="section")
            div(class="row")

                div(class="col s12 m6 l4")
                    div(class="card")
                        div(class="card-content")
                            span(class="card-title black-text") NetworkId
                            h3 #{networkName}
                        div(class="card-action")
                            a(href="/usage/#{networkName}") Access raw data
                div(class="col s12 m6 l4")
                    div(class="card")
                        div(class="card-content")
                            span(class="card-title black-text") Last update
                            p Last sample: #{timeSinceSample} ago
                div(class="col s12 m6 l4")
                    div(class="card")
                        div(class="card-content")
                            span(class="card-title black-text") Today
                            p #{usedSinceMidnight} used since midnight
                            p(class="typo-info") Data might look stale as Netcom only updates data in batch.
                div(class="col s12 m6 l4")
                    div(class="card")
                        div(class="card-content")
                            span(class="card-title black-text") Data left in period
                            h1 #{dataleft}

                div(class="col s12 m6 l4")
                    div(class="card")
                        div(class="card-content")
                            span(class="card-title black-text") Yesterday
                            p Total usage #{usedYesterday}
